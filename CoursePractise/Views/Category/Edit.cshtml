@model CoursePractise.Models.Category
@{
	ViewData["Title"] = "Edit";
}
<form method="post">
	<div class="border p-3">
		<input asp-for="CategoryId" hidden/>		
		<div class="text-info">
			<h2 class="text-info pl-3">Edit Category</h2>
		</div>
		<div class="row">
			<div class="col-8">
				<div class="form-group row">
					<div class="col-4">
						<label asp-for="CategoryName"></label>
					</div>
					<div class="col-8">
						<input asp-for="CategoryName" class="form-control"/>
					</div>

				</div>
				<br />
				<div class="form-group row">
					<div class="col-4">
						<label asp-for="DisplayOrder"></label>
					</div>
					<div class="col-8">
						<input asp-for="DisplayOrder" class="form-control"/>
					</div>

				</div>
				<br />
				<div class="form-group row">
					<div class="col-8 offset-4 row">

						<div class="col">
						   <input type="submit" class="brn btn-info w-100" value="Save"  />
						  
						</div>
						<div class="col">
							<a  asp-action="Index" class="btn btn-success w-100" >
								<i class="fa-solid fa-backward"></i> 
							 </a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	</form>

