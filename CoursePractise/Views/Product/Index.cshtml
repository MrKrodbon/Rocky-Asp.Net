@model IEnumerable<CoursePractise.Models.Product>

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Product List</h2>
		</div>
		<div class="col-6 text-end" >
			 <a  asp-action="Create" class="btn btn-primary">
			 <i class="fa-solid fa-plus"></i> &nbsp; Create New Product
			 </a>
		</div>
		<br /><br />

		@if (Model.Count()>0)
		{
			<table class="yable table-voredered table-striped" style="width:100%">
				<thead>
					<tr>
						<th>
							Product Name
						</th>
						<th>
							Price
						</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var obj in Model)
					{
						<tr>
							<td width="50%">@obj.ProductName</td>
							<td width="30%">@obj.Price</td>
							<td	class="text-center">
								<div class="w-75 btn btn-group" role="group">
									<a asp-route-Id="@obj.ID" asp-action="Create" class="btn btn-primary mx-2">
									<i class="fa-solid fa-pen-to-square"></i>
									</a>
								
									<a asp-route-Id="@obj.ID" asp-action="Delete" class="btn btn-danger mx-2">
									<i class="fa-solid fa-trash"></i>
									</a>
								</div>
							</td>
						</tr>
					}
				</tbody>
			</table>
		}
		else
		{
			<p>Product doesn't exist'</p>
		}
	</div>
</div>



