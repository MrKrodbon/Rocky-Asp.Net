@model IEnumerable<CoursePractise.Models.CustomPage>
@{
    ViewData["Title"] = "Custom Page";
}

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Custom Page Objects</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="CustomPage" asp-action="Create" class="btn btn-primary"> Create an object</a>
        </div>
        <br />
        <br />
        @if(Model.Count() >0 ){
            <table class="yable table-voredered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>
                        Object name
                        </th>
                    </tr>

                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td width="50%">
                                @item.CustomName
                            </td>
                        
                       
                            <td class="text-center">
                                <div class="w-75 btn btn-group"  role="group">
                                    <a asp-controller="CustomPage" asp-route-Id="@item.Id" class="btn btn-primary mx-2" asp-action="Edit">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </a>
                                    <a asp-controller="CustomPage" asp-route-Id="@item.Id" class=" btn btn-danger mx-2" asp-action="Delete">
                                        <i class="fa-solid fa-trash"></i>
                                    </a>
                                </div>
                        
                        
                            </td>
                        
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No custom objects here :(</p>
        }
    </div>

</div>



